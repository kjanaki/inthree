<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutParentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_10">


        <LinearLayout
            android:id="@+id/labdeled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/rel_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp">


                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:text="Janaki"
                    android:textColor="#1A1918"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/po_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/supplier_name"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="6dp"
                    android:text="SO -00154"
                    android:textColor="#F2585151"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/po_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/po_order_number"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="6dp"
                    android:text="15 Nov 2018"
                    android:textColor="#F2585151"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="113dp"
                android:layout_marginLeft="113dp">

                <TextView
                    android:id="@+id/txtProducctName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:text="Grn details"
                    android:textColor="#1A1918"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/grn_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/txtProducctName"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:text="Grn details"
                    android:textColor="#9E978F"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/grn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/grn_details"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="6dp"
                    android:text="SO -00154"
                    android:textColor="#F2585151"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/grn_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/grn_no"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="6dp"
                    android:text="15 Nov 2018"
                    android:textColor="#F2585151"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </RelativeLayout>


        </LinearLayout>


    <LinearLayout
        android:id="@+id/f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labdeled"
        android:layout_margin="11dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtProductQuantityReturnExchange"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="113dp"
            android:layout_marginLeft="113dp"
            android:text="1"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
