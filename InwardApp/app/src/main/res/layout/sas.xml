                        style="@style/novaRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/grn_date_txt"
                        android:layout_alignBottom="@+id/grn_date_txt"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:text="10004338"/>
                </RelativeLayout>
            </LinearLayout>
