<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp">

                        <TextView
                            android:id="@+id/supplier_name"
                            style="@style/novaRegularStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:text="Order # : "
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/product_count_txt"
                            style="@style/novaRegularStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_toLeftOf="@+id/product_count"
                            android:text="Product : " />

                        <TextView
                            android:id="@+id/product_count"
                            style="@style/novaRegularStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/product_count_txt"
                            android:layout_alignBottom="@+id/product_count_txt"
                            android:layout_alignParentRight="true"
                            android:textSize="14sp"
                            android:text="10004338"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp">

                        <TextView
                            android:id="@+id/po_order_number_txt"
                            style="@style/novaRegularStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/po_order_number"
                            android:text="Order # : "
                            android:textColor="#0A0A0A"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/po_order_number"
                            style="@style/novaRegularStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/po_order_number_txt"
                            android:layout_alignBottom="@+id/po_order_number_txt"
                            android:layout_alignParentRight="true"
                            android:text="10004338"
                            android:textSize="14sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/grn_no_txt"
                            style="@style/novaRegularStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/grn_no"
                            android:text="GRN # : "
                            android:textColor="#090808"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/grn_no"
                            style="@style/novaRegularStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/grn_no_txt"
                            android:layout_alignBottom="@+id/grn_no_txt"
                            android:layout_alignParentRight="true"
                            android:textSize="14sp"
                            android:text="10004338"/>
                    </RelativeLayout>
                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/po_order_date_txt"
                        style="@style/novaRegularStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/po_order_date"
                        android:text="Date :"
                        android:textColor="#1F1D1D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/po_order_date"
                        style="@style/novaRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/po_order_date_txt"
                        android:layout_alignBottom="@+id/po_order_date_txt"
                        android:layout_alignParentRight="true"
                        android:text="10004338"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/grn_date_txt"
                        style="@style/novaRegularStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/grn_date"
                        android:text="Date :"
                        android:textColor="#030303"
                        android:textSize="14sp" />

                    <TextView
